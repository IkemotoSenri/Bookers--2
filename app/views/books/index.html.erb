<%= render 'users/list', user:@user %>
<%= render 'books/list', book:@book %>

<h1 class = "Books_title">Books</h1>
<table>
  <thead>
   <tr>
    <td>Title</td>
    <td>Opinion</td>
   </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
    <td class="image-index"><%= attachment_image_tag @user, :profile_image, size: '30x30', fallback: "no_image.jpg" %></td>
    <td class="text-index"><%= book.title %></td>
    <td class="text-index"><%= book.body %></td>
    <td class="link-index"><%= link_to "Show", book_path(book.id) %></td>
   </tr>
   <% end %>
  </tbody>

 </table>