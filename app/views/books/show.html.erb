<% if flash[:notice] %>
  <div class= "successfully"><%= flash[:notice] %></div>
  <% end %>

<h1 class= "Books_detail">Books detail</h1>
<%= link_to @user.name, user_path(@user) %>
<%= attachment_image_tag @user, :profile_image, size: '30x30', fallback: "no_image.jpg" %>
<p class="show_title" ><%=link_to @book.title, book_path(@book) %></p>
<p class="show_body"><%= @book.body %></p>

 <% if @book.user == current_user %>
 <%= link_to "edit", edit_book_path %>
 <%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
 <% else %>
 <td></td>
 <td></td>
 <% end %>