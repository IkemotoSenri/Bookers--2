<%= render 'users/list', user:@user %>
<%= render 'books/list', book:@book %>


<h2>Books</h2>
<table>
 <thead>
  <tr>
   <td>Title</td>
   <td>Opinion</td>
  </tr>
 </thead>

<tbody>
<% @books.each do |book| %>
 <tr>
  <td class = "user_show_image"><%= attachment_image_tag @user, :profile_image, size: '30x30', fallback: "no_image.jpg" %></td>
  <td><%= link_to book.title, book_path(book) %> </td>
  <td><%= book.body %></td>
 </tr>
 <% end %>
</tbody>

</table>