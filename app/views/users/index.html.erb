<%= render 'users/list', user:@user %>
<%= render 'books/list', book:@book %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <td class = "users_index_text">image</td>
      <td class = "users_index_text">name</td>
    </tr>
  </thead>

  <tbody>

    <tr>
      <td class = "users_index_image"><%= attachment_image_tag @user, :profile_image, size: '30x30', fallback: "no_image.jpg" %></td>
      <td class = "users_index_name"><%= @user.name %></td>
      <td class = "users_index_show"><%= link_to "Show", user_path(@user) %></td>
    </tr>
  </tbody>
</table>